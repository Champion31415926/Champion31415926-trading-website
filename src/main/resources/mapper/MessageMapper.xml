<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.mrblackpineapple.trading_website.mapper.MessageMapper">

    <resultMap id="BaseResultMap" type="cn.mrblackpineapple.trading_website.vo.MessageVO">
        <id column="id" property="id"/>
        <result column="userid" property="userId"/>
        <result column="username" property="userName"/>
        <result column="useravatar" property="userAvatar"/>
        <result column="useraccount" property="userAccount"/>
        <result column="content" property="content"/>
        <result column="isread" property="isRead"/>
        <result column="createtime" property="createTime"/>
    </resultMap>

    <insert id="save">
        INSERT INTO message (userid, content, isread, createtime)
        VALUES (#{userId}, #{content}, #{isRead}, #{createTime})
    </insert>

    <update id="setRead">
        UPDATE message SET isread = true WHERE userid = #{userId}
    </update>

    <delete id="batchDelete" parameterType="list">
        DELETE FROM message WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="query" resultMap="BaseResultMap">
        SELECT m.*,
        u.username,
        u.useravatar,
        u.useraccount
        FROM message m
        LEFT JOIN "user" u ON u.id = m.userid
        <where>
            <if test="userId != null">
                AND m.userid = #{userId}
            </if>
            <if test="content != null and content != ''">
                AND m.content LIKE '%' || #{content} || '%'
            </if>
            <if test="startTime != null and endTime != null">
                AND m.createtime BETWEEN #{startTime} AND #{endTime}
            </if>
        </where>
        ORDER BY m.id DESC
        <if test="current != null and size != null">
            LIMIT #{size} OFFSET #{current}
        </if>
    </select>

    <select id="queryCount" resultType="integer">
        SELECT COUNT(*)
        FROM message m
        <where>
            <if test="userId != null">
                AND m.userid = #{userId}
            </if>
            <if test="content != null and content != ''">
                AND m.content LIKE '%' || #{content} || '%'
            </if>
            <if test="startTime != null and endTime != null">
                AND m.createtime BETWEEN #{startTime} AND #{endTime}
            </if>
        </where>
    </select>

</mapper>
