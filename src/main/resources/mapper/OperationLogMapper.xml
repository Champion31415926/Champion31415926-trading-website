<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.mrblackpineapple.trading_website.mapper.OperationLogMapper">

    <resultMap id="BaseResultMap" type="cn.mrblackpineapple.trading_website.vo.OperationLogVO">
        <id column="id" property="id"/>
        <result column="userid" property="userId"/>
        <result column="detail" property="detail"/>
        <result column="createtime" property="createTime"/>
    </resultMap>

    <insert id="save">
        INSERT INTO operationlog (userid, detail, createtime)
        VALUES (#{userId}, #{detail}, #{createTime})
    </insert>

    <delete id="batchDelete" parameterType="list">
        DELETE FROM "operationlog" WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="query" resultMap="BaseResultMap">
        SELECT ol.*,
        u.username,
        u.useraccount
        FROM "operationlog" ol
        LEFT JOIN "user" u ON u.id = ol.userid
        <where>
            <if test="detail != null and detail != ''">
                AND ol.detail LIKE CONCAT('%', #{detail}, '%')
            </if>
            <if test="userId != null">
                AND ol.userid = #{userId}
            </if>
            <if test="startTime != null and endTime != null">
                AND ol.createtime BETWEEN #{startTime} AND #{endTime}
            </if>
        </where>
        ORDER BY ol.id DESC
        <if test="current != null and size != null">
            LIMIT #{size} OFFSET #{current}
        </if>
    </select>

    <select id="queryCount" resultType="integer">
        SELECT COUNT(*)
        FROM "operationlog" ol
        <where>
            <if test="detail != null and detail != ''">
                AND ol.detail LIKE CONCAT('%', #{detail}, '%')
            </if>
            <if test="userId != null">
                AND ol.userid = #{userId}
            </if>
            <if test="startTime != null and endTime != null">
                AND ol.createtime BETWEEN #{startTime} AND #{endTime}
            </if>
        </where>
    </select>

</mapper>
